<launch>
  <arg name="start_master" default="True" />
  <node name="my_tub_volume_tf" pkg="rosdop" type="cr_volume.py" output="screen">
    <param name="name"            type="string" value="tubvolume1"                            />
    <param name="username"        type="string" value="frederico"                             />
    <param name="sshfs_hostname"  type="string" value="poop.local"                           />
    <param name="identity_file"   type="string" value="/root/.ssh/id_rsa"                     />
    <!-- needs an absolute path! -->
    <param name="tub_path"        type="string" value="$(find dop_tf)"  />
    <!-- It is no longer the workspace, because of submodules, but this name makes more sense -->
    <!-- than anything else I could think. -->
    <param name="ws_path"         type="string" value="/root/dop_tf"                  />
  </node>

<!-- need to do something to ensure there is only one master. This is bogus -->
  <node if="$(arg start_master)" name="docker_master" pkg="rosdop" type="docker_master.py" output="screen">
    <param name="use_dnsmasq"  type="bool" value="True"                           />
  </node>

</launch>
